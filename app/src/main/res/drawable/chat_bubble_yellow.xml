<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="10dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <stroke
                android:width="2dp"
                android:color="@color/yellow" />
            <size
                android:width="60dp"
                android:height="60dp" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:start="12dp"
        android:gravity="start|bottom"
        android:top="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="135%"
            android:pivotY="15%"
            android:toDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />
                <stroke
                    android:width="2dp"
                    android:color="@color/yellow" />
                <size
                    android:width="10dp"
                    android:height="10dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:start="2dp"
        android:end="2dp"
        android:bottom="12dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
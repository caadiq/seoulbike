<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutBookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="36dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtBookmark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_square_neo_bold"
                        android:text="@string/str_station_bookmark"
                        android:textColor="@color/colorSecondary"
                        android:textSize="17dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtBookmarkCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/nanum_square_neo_bold"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17dp"
                        app:layout_constraintBottom_toBottomOf="@+id/txtBookmark"
                        app:layout_constraintStart_toEndOf="@+id/txtBookmark"
                        app:layout_constraintTop_toTopOf="@+id/txtBookmark"
                        tools:text="10" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgArrow"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:padding="2dp"
                        android:tint="@color/gray"
                        app:layout_constraintBottom_toBottomOf="@+id/txtBookmarkCount"
                        app:layout_constraintDimensionRatio="H,1:1"
                        app:layout_constraintStart_toEndOf="@+id/txtBookmarkCount"
                        app:layout_constraintTop_toTopOf="@+id/txtBookmarkCount"
                        app:srcCompat="@drawable/icon_arrow_right" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerBookmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:orientation="horizontal"
                    android:paddingStart="24dp"
                    android:paddingEnd="12dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layoutBookmark"
                    tools:listitem="@layout/row_station_bookmark" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:fontFamily="@font/nanum_square_neo_bold"
                    android:text="@string/str_station_nearby"
                    android:textColor="@color/colorSecondary"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="@+id/layoutBookmark"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerBookmark" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgMarker"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:tint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/txtAddress"
                    app:layout_constraintStart_toStartOf="@+id/layoutBookmark"
                    app:layout_constraintTop_toTopOf="@+id/txtAddress"
                    app:srcCompat="@drawable/oval_transparent_primary_outlined_4dp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nanum_square_neo_bold"
                    android:maxLines="1"
                    android:paddingVertical="4dp"
                    android:textColor="@color/gray"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgMarker"
                    app:layout_constraintTop_toBottomOf="@+id/txtStation"
                    tools:text="서울시 강남구 논현동" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerStation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="8dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtAddress"
                    tools:itemCount="3"
                    tools:listitem="@layout/row_stations" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtEmptyList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nanum_square_neo_regular"
        android:text="@string/str_station_no_stations"
        android:textColor="@color/dark_gray"
        android:textSize="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nanum_square_neo_regular"
        android:text="@string/str_station_error_network"
        android:textColor="@color/dark_gray"
        android:textSize="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnRetry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRetry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/rectangle_white_rounded_8dp_primary_outlined_1dp_ripple"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:stateListAnimator="@null"
        android:text="@string/str_station_retry"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtError" />

</androidx.constraintlayout.widget.ConstraintLayout>
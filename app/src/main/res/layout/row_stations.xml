<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:ellipsize="end"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:maxLines="1"
            android:textColor="@color/colorSecondary"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="4924. 논현동가구거리" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="@string/str_bottomsheet_status_parking"
            android:textColor="@color/dark_gray"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtName"
            app:layout_constraintTop_toBottomOf="@+id/txtName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtParking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="4"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/parking"
            app:layout_constraintStart_toEndOf="@+id/parking"
            app:layout_constraintTop_toTopOf="@+id/parking"
            tools:text="2" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="/"
            android:textColor="@color/light_gray"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@+id/txtParking"
            app:layout_constraintTop_toTopOf="@+id/parking" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtRack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:text="10"
            android:textColor="@color/dark_gray"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/parking"
            app:layout_constraintStart_toEndOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/parking"
            tools:text="8" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_square_neo_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="@+id/parking"
            app:layout_constraintEnd_toEndOf="@+id/txtName"
            app:layout_constraintTop_toTopOf="@+id/parking"
            tools:text="196.1m" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_white_rounded_12dp">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapView"
        android:name="com.naver.maps.map.MapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="H, 1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.naver.maps.map.widget.LocationButtonView
        android:id="@+id/locationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/mapView"
        app:layout_constraintEnd_toEndOf="@+id/mapView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:textColor="@color/darker_gray"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/mapView"
        app:layout_constraintStart_toStartOf="@+id/mapView"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        tools:text="4924. 논현동가구거리" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/nanum_square_neo_regular"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:textColor="@color/dark_gray"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="@id/txtName"
        app:layout_constraintStart_toStartOf="@+id/txtName"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        tools:text="서울특별시 강남구 논현동 56-21" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:text="@string/str_bottomsheet_status_parking"
        android:textColor="@color/dark_gray"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtName"
        app:layout_constraintTop_toBottomOf="@+id/txtAddress" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtParking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:text="4"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/parking"
        app:layout_constraintStart_toEndOf="@+id/parking"
        app:layout_constraintTop_toTopOf="@+id/parking"
        tools:text="2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:text="/"
        android:textColor="@color/light_gray"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@+id/txtParking"
        app:layout_constraintTop_toTopOf="@+id/parking" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtRack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:text="10"
        android:textColor="@color/dark_gray"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/parking"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toTopOf="@+id/parking"
        tools:text="8" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_square_neo_bold"
        android:textColor="@color/colorPrimary"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/parking"
        app:layout_constraintEnd_toEndOf="@+id/txtName"
        app:layout_constraintTop_toTopOf="@+id/parking"
        tools:text="196.1m" />

</androidx.constraintlayout.widget.ConstraintLayout>